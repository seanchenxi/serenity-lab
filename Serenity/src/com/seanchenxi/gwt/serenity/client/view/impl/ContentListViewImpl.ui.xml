<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			 xmlns:o="urn:import:com.sun.org.apache.xpath.internal.operations"
			 xmlns:my="urn:import:com.seanchenxi.gwt.serenity.client.view">
	<g:LayoutPanel>
		<g:layer left="0px" right="0px" top="0px" height="32px">
			<g:HTML styleName="list-title top-corner-radius" ui:field="titleField" />
		</g:layer>
		<g:layer left="0px" right="0px" top="32px" bottom="0px">
			<g:ScrollPanel styleName="list-body">
				<g:FlowPanel ui:field="listBody" />
			</g:ScrollPanel>
		</g:layer>
		<g:layer right="20px" top="4px" width="160px" height="28px">
			<g:FlowPanel styleName="paging-control">
				<g:HTML styleName="paging-info-lbl" ui:field="pagingInfoLbl" />
				<g:HTML styleName="paging-control-lbl" ui:field="newer" HTML="&lt;" />
				<g:HTML styleName="paging-control-lbl" ui:field="older" HTML="&gt;" />
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>
