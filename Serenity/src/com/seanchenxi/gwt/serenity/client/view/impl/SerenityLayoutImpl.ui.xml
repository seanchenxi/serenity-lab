<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:mu="urn:import:com.seanchenxi.gwt.ui.widget"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="resource" type="com.seanchenxi.gwt.serenity.client.view.impl.SerenityLayoutImpl.Resources" />
  <g:HTMLPanel styleName="{resource.style.layout} {resource.style.container}">
    <mu:Heading ui:field="header" level="1" styleName="{resource.style.layout} {resource.style.headerContainer}" />
    <g:SimplePanel ui:field="sidebarContainer" styleName="{resource.style.layout} {resource.style.sidebarContainer}" />
    <g:SimplePanel ui:field="contentListContainer" styleName="{resource.style.layout} {resource.style.contentListContainer}"/>
    <g:HTML ui:field="footer" styleName="{resource.style.layout} {resource.style.footerContainer}"/>
  </g:HTMLPanel>
</ui:UiBinder>